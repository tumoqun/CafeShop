<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGroundGrey">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_orange_dark">



            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_sort_by_size"
                android:layout_gravity="left"/>

            <!--<View-->
                <!--android:id="@+id/view3"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_weight="1"/>-->
            <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/logowhitesesized" />

            <android.support.v7.widget.SearchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right" />




    </android.support.v7.widget.Toolbar>




    <RadioGroup
        android:id="@+id/rgMonAnThucUong"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbThucUong"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/change_background_tab_orangelineunder"
            android:button="@android:color/transparent"
            android:checked="true"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Thức uống"
            android:textColor="@drawable/change_textcolor_blacktororange" />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/colorBackGroundGrey" />

        <RadioButton
            android:id="@+id/rbMonAn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/change_background_tab_orangelineunder"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Món ăn"
            android:textColor="@drawable/change_textcolor_blacktororange" />

        <View
            android:id="@+id/view2"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/colorBackGroundGrey" />

        <RadioButton
            android:id="@+id/rbYeuThich"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/change_background_tab_orangelineunder"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Yêu thích"
            android:textColor="@drawable/change_textcolor_blacktororange" />
    </RadioGroup>



    <android.support.v4.view.ViewPager
    android:id="@+id/viewpager_TrangChu"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/aa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:button="@android:color/transparent"
            android:checked="false"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/btn_home_string"
            android:textColor="@drawable/change_textcolor_blacktororange" />
        <RadioButton
            android:id="@+id/bb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:button="@android:color/transparent"
            android:checked="true"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/btn_home_string"
            android:textColor="@drawable/change_textcolor_blacktororange" />
        <RadioButton
            android:id="@+id/cc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:button="@android:color/transparent"
            android:checked="false"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/btn_home_string"
            android:textColor="@drawable/change_textcolor_blacktororange" />
        <RadioButton
            android:id="@+id/đ"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:button="@android:color/transparent"
            android:checked="false"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/btn_home_string"
            android:textColor="@drawable/change_textcolor_blacktororange" />
        <View
            android:id="@+id/view6"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/colorBackGroundGrey" />
    </RadioGroup>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10pt"
    android:background="@drawable/custom_dialog_white_corner"
    >

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Bạn có chắc muốn đăng xuất ?" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCoDangXuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="CÓ"
            android:textColor="@drawable/change_textcolor_btn_blacktowhite"
            android:layout_marginRight="20dp"
            android:background="@drawable/change_buttoncolor_whitetoorange_border"/>

        <Button
            android:id="@+id/btnKhongDangXuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="KHÔNG"
            android:textColor="@drawable/change_textcolor_btn_blacktowhite"
            android:background="@drawable/change_buttoncolor_whitetoorange_border"/>

    </LinearLayout>
</LinearLayout>

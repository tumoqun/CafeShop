<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerviewcuahang"

    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    app:layout_goneMarginBottom="10dp"
    app:cardCornerRadius="10dp"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgCuaHang"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic[13]"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/txtTenCuaHang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên cửa hàng"
                    android:textSize="15sp"
                    android:textStyle="bold"

                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/txtDiaChi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Địa chỉ địa chỉ địa chỉ địa chỉ địa chỉ địa chỉ "
                    android:textSize="13sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnXemCuaHang"
                android:text="Xem »"
                android:textSize="12sp"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:textColor="@drawable/change_textcolor_btn_orangetowhite"
                android:background="@drawable/change_buttoncolor_whitetoorange_border"/>
        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>